{
  "name": "evm-tool-starter",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "git:workflow": "node scripts/git-workflow.js",
    "dev": "tsc -p electron && concurrently -k \"vite --config ui/vite.config.ts\" \"wait-on tcp:5173 dist-electron/main.js dist-electron/preload.js && cross-env VITE_DEV=1 electron .\"",
    "build:renderer": "vite build --config ui/vite.config.ts",
    "build:electron": "electron-builder",
    "build": "npm run build:renderer && tsc -p electron && npm run build:electron",
    "test:ui": "vitest --config ui/vite.config.ts --run"
  },
  "build": {
    "files": [
      "dist-electron/**/*",
      "ui/dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "extraMetadata": {
      "main": "dist-electron/main.js"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "jsdom": "^24.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.4.0",
    "vite": "^5.3.1",
    "vitest": "^2.0.0",
    "wait-on": "^7.2.0"
  }
}
